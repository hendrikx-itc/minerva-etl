FROM ubuntu:18.04

RUN apt-get update && apt-get install -y \
    git \
    ca-certificates \
    software-properties-common \
    libpq-dev \
    python-dev \
    python3 \
    python3-dateutil \
    python3-pip

RUN printf 'deb [trusted=yes] https://packages.hendrikx-itc.nl/hitc/common/bionic/unstable/ bionic main' > /etc/apt/sources.list
RUN apt-get update

RUN pip3 install \
    docker \
    pytest \
    configobj \
    psycopg2 \
    pyparsing \
    tz \
    yaml
