FROM ubuntu:18.04

RUN apt-get update && apt-get install -y \
    git \
    ca-certificates \
    software-properties-common \
    python3 \
    python3-pip

RUN printf 'deb https://packages.hendrikx-itc.nl/hitc/common/bionic/unstable/ bionic main' > /etc/apt/sources.list
RUN apt-get update

RUN pip3 install \
    docker \
    pytest
